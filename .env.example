# Development Environment Variables
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/boostroi_db

# Email Configuration - SendGrid
# Get your API key from https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_NEWSLETTER_LIST_ID=your_newsletter_list_id
SENDGRID_LEADS_LIST_ID=your_leads_list_id
SENDGRID_CASE_STUDY_LIST=your_case_study_list_id
FROM_EMAIL=your_from_email@yourdomain.com
FROM_NAME=Your Business Name

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
VITE_STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key

# Server Configuration
NODE_ENV=development
PORT=9004
HOST=0.0.0.0

# Session Security
SESSION_SECRET=your_secure_session_secret_change_in_production

# Feature Flags
ENABLE_EMAIL=true
ENABLE_STRIPE=true
ENABLE_ANALYTICS=false
